{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "target": "ES2020",
        "useDefineForClassFields": true,

        /* # Type Checking
        */
        // "allowUnreachableCode": undefined, // Visual Studio Code should warn
                                              // about unreachable code
                                              // but it does not :(
                                              // as well as `tsc`

        // "allowUnusedLabels": undefined, // Visual Studio Code should warn
                                           // about unused lables
                                           // but it does not :(
                                           // as well as `tsc`
        "alwaysStrict": true,
        //"exactOptionalPropertyTypes": , // I do not know when this property would be useful.
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        /* Bundler mode */
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "noEmit": true,
        "resolveJsonModule": true,

        "strict": true
    },

    "include": [
        "src"
    ],

    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
