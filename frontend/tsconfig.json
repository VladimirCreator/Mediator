{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "target": "ES2020",
        "useDefineForClassFields": true,

        /* Bundler mode */
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "noEmit": true,
        "resolveJsonModule": true,

        /* Linting */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true
    },

    "include": [
        "src"
    ],

    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
